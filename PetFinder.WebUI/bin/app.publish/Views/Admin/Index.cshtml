@model IEnumerable<PetFinder.Domain.Entities.Advertisement>

@{
    ViewBag.Title = "Админ панель: список объявлений";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список объявлений</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название</th>
                <th class="text-center">Действия</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.AdvertisementID</td>
                    <td>@Html.ActionLink(item.Pet, "Edit", new { item.AdvertisementID }) &ndash; 
                        @Html.ActionLink(item.Category, "Edit", new { item.AdvertisementID })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("DeleteAdvertisement", "Admin"))
                        {
                            @Html.Hidden("AdvertisementId", item.AdvertisementID)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Удалить" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
